@model StoreModel
@*Model namespace using directive should be added to _ViewImports.cshtml.*@

@{
    ViewData["Title"] = "Create New Store";
}

<h1>@ViewData["Title"]</h1>
<hr />
<h4>Store</h4>
<hr />
<div class="row">
    <div class="col-12">
        <form asp-action="Create">
		@Html.AntiForgeryToken()
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="row mb-3">
                <label asp-for="Name" class="col-2 col-form-label"></label>
				<div class="col-5">
					<input asp-for="Name" class="form-control" />
					<span asp-validation-for="Name" class="text-danger"></span>
				</div>
            </div>
            <div class="row mb-3">
				<label asp-for="IsVirtual" class="col-2 col-form-label"></label>

				<div class="col-5" style="padding-top: 7px;">
					<input class="form-check-input" asp-for="IsVirtual" />
                </div>
                <!-- Model IsVirtual özelliğinin tipi bool olduğu için Tag Helper check box input'u oluşturacaktır. -->

            </div>
            <div class="row mb-3">
				<div class="offset-2 col-5">
					<input type="submit" value="Save" class="btn btn-dark" />
					&nbsp;&nbsp;
                    <button type="reset" class="btn btn-outline-dark">Reset</button>
					&nbsp;&nbsp;
					<a asp-action="Index">Back to Store List</a>
				</div>
            </div>
        </form>
    </div>
</div>




